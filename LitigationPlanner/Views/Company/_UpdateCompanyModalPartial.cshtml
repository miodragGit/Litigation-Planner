@model LitigationPlanner.MVC.Models.UpdateCompanyViewModel
<!-- Update Company Modal -->
<div class="modal fade" id="updateCompanyModal-@Model.Company.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <form asp-controller="Company" asp-action="UpdateCompany" method="post" role="form">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Update Company</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input asp-for="@Model.Company.Id" hidden />

                        <input asp-for="@Model.Company.Title" class="form-control" aria-describedby="income" placeholder="Edit company name" />
                        <span asp-validation-for="@Model.Company.Title" class="text-danger" style="font-size:small;"></span>

                        <input asp-for="@Model.Company.Address" class="form-control mt-2" aria-describedby="income" placeholder="Edit company address" />
                        <span asp-validation-for="@Model.Company.Address" class="text-danger" style="font-size:small;"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="mint-btn btn btn-sm btn-primary" data-dismiss="modal">Close</button>
                    <button class="mint-btn btn btn-sm btn-primary" type="submit">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
