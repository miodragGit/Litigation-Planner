@model LitigationPlanner.MVC.Models.Litigation.CreateLitigationViewModel
@using  LitigationPlanner.Data.Models.Enums

<!-- Create Litigation Modal -->
<form asp-controller="Litigation" asp-action="CreateLitigation" method="post" role="form">
    <div class="modal fade" id="createLitigationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create Litigation </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">

                        <input asp-for="@Model.DateAndTime" value="@System.DateTime.Now" class="form-control mt-3" placeholder="Date" />
                        <span asp-validation-for="@Model.DateAndTime" class="text-danger" style="font-size:small;"></span>

                        <select class="form-control mt-2" asp-for="@Model.LocationId"
                                asp-items="@(new SelectList(Model.Locations, "Id", "Title"))">
                            <option disabled selected>Select location</option>
                        </select>
                        <span asp-validation-for="@Model.LocationId" class="text-danger" style="font-size:small;"></span>

                        <select class="form-control mt-2" asp-for="@Model.Judge"
                                asp-items="@(new SelectList(Model.Contacts, "Id", "Name"))">
                            <option disabled selected>Select Judge</option>
                        </select>

                        <select asp-for="@Model.InstitutionType"
                                asp-items="Html.GetEnumSelectList<InstitutionType>()" class="form-control mt-3" placeholder="Institution type">
                            <option disabled selected>Select Institution type</option>
                        </select>

                        <input asp-for="@Model.ProcessIdentifier" class="form-control mt-3" placeholder="Process identifier" />

                        <input asp-for="@Model.CourtroomNumber" type="text" class="form-control mt-3" placeholder="Courtroom number" />

                        <select class="form-control mt-2" asp-for="@Model.Prosecutor"
                                asp-items="@(new SelectList(Model.Contacts, "Id", "Name"))">
                            <option disabled selected>Select Prosecutor</option>
                        </select>

                        <select class="form-control mt-2" asp-for="@Model.Defendant"
                                asp-items="@(new SelectList(Model.Contacts, "Id", "Name"))">
                            <option disabled selected>Select Defendant</option>
                        </select>

                        <select class="form-control mt-2" asp-for="@Model.ProcessType"
                                asp-items="@(new SelectList(Model.ProcessTypes, "Id", "Title"))">
                            <option disabled selected>Select Process Type</option>
                        </select>

                        <input asp-for="@Model.Note" class="form-control mt-3 mt-2" placeholder="Note" />

                        <select class="form-control chosen-select mt-2 p-0" asp-for="@Model.UsersIds"
                                asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
                            <option disabled selected>Select Lawyers</option>
                        </select>
                        <span asp-validation-for="@Model.UsersIds" class="text-danger" style="font-size:small;"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="mint-btn btn btn-sm btn-primary" data-dismiss="modal">Close</button>
                    <button class="mint-btn btn btn-sm btn-primary" type="submit">
                        Create
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>