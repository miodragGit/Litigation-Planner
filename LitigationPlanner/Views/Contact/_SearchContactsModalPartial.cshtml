@model LitigationPlanner.MVC.Models.Contact.SearchContactsViewModel
<!-- Search Contacts Modal -->
<form asp-controller="Contact" asp-action="SearchContacts" method="get" role="form">
    <div class="modal fade" id="searchContactsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Search Contacts </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input asp-for="@Model.Name" class="form-control mt-3" aria-describedby="income" placeholder="Name" />

                        <input asp-for="@Model.TelephoneNumber1" class="form-control mt-3" aria-describedby="income" placeholder="Telephone 1" />

                        <input asp-for="@Model.TelephoneNumber2" class="form-control mt-3" aria-describedby="income" placeholder="Telephone 2" />

                        <input asp-for="@Model.Address" class="form-control mt-3" aria-describedby="income" placeholder="Address" />

                        <input asp-for="@Model.Email" class="form-control mt-3" aria-describedby="income" placeholder="Email" />

                        <input asp-for="@Model.Profession" class="form-control mt-3" aria-describedby="income" placeholder="Profession" />

                        <select class="form-control mt-2" asp-for="@Model.CompanyId"
                                asp-items="@(new SelectList(Model.Companies, "Id", "Title"))">
                            <option disabled selected>Select Company</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="mint-btn btn btn-sm btn-primary" data-dismiss="modal">Close</button>
                    <button class="mint-btn btn btn-sm btn-primary" type="submit">
                        Search
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>