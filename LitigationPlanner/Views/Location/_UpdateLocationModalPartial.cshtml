@model LitigationPlanner.MVC.Models.Location.UpdateLocationViewModel
<!-- Update Location Modal -->
<div class="modal fade" id="updateLocationModal-@Model.Location.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <form asp-controller="Location" asp-action="UpdateLocation" method="post" role="form">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Update Contact</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input asp-for="@Model.Location.Id" hidden />

                        <input asp-for="@Model.Location.Title" class="form-control mt-3" aria-describedby="income" placeholder="Name" />
                        <span asp-validation-for="@Model.Location.Title" class="text-danger" style="font-size:small;"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="mint-btn btn btn-sm btn-primary" data-dismiss="modal">Close</button>
                    <button class="mint-btn btn btn-sm btn-primary" type="submit">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>