@model LitigationPlanner.MVC.Models.Account.UpdateUserViewModel
<!-- Update User Modal -->
<div class="modal fade" id="updateUserModal-@Model.User.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <form asp-controller="Account" asp-action="UpdateUser" method="post" role="form">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Update User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input asp-for="@Model.User.Id" hidden />

                        <input asp-for="@Model.User.FirstName" class="form-control mt-3" aria-describedby="income" placeholder="First name" />

                        <input asp-for="@Model.User.LastName" class="form-control mt-3" aria-describedby="income" placeholder="Last name" />

                        <input asp-for="@Model.User.Email" class="form-control mt-3" aria-describedby="income" placeholder="Email" />

                        <input asp-for="@Model.User.UserName" class="form-control mt-3" aria-describedby="income" placeholder="Username" />
                        <span asp-validation-for="@Model.User.UserName" class="text-danger" style="font-size:small;"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="mint-btn btn btn-sm btn-primary" data-dismiss="modal">Close</button>
                    <button class="mint-btn btn btn-sm btn-primary" type="submit">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>