@model LitigationPlanner.MVC.Models.Account.RemoveUserFromRoleViewModel
<!-- Remove user from role Modal -->
<div class="modal fade" id="removeUserFromRoleModal-@Model.Role.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <form asp-controller="Account" asp-action="RemoveUserFromRole" method="post" role="form">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Remove user from role</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input asp-for="@Model.Role.Id" hidden />
                        <input asp-for="@Model.Role.Name" hidden />

                        <select class="form-control" asp-for="UserId"
                                asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="mint-btn btn btn-sm btn-primary" data-dismiss="modal">Close</button>
                    <button class="mint-btn btn btn-sm btn-primary" type="submit">
                        Remove
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>